<section class='mb-14'>
    <div class='flex items-center gap-3 mb-10'>
        <span
            class='material-icons text-design-white-80 text-2xl md:text-3xl rotate-90'
            >trending_flat</span
        >
        <span class='text-design-white-80 text-2xl md:text-3xl font-semibold'
            >Featured Work</span
        >
    </div>
    <div class='columns-1 md:columns-2 gap-4 lg:hidden'>
        {
            projects.map((item) => (
                <a class='cursor-pointer max-w-max' href={item?.url}>
                    <img
                        src={item.img}
                        alt={item.name}
                        class='w-full max-w-max h-auto mb-4'
                    />
                </a>
            ))
        }
    </div>
    <div class='w-full hidden lg:flex justify-start gap-x-4'>
        <div class='flex flex-col gap-y-4 w-full max-w-max'>
            {
                oneColumnProjects.map((item) => (
                    <a class='cursor-pointer max-w-max' href={item?.url}>
                        <img
                            src={item.img}
                            alt={item.name}
                            class='w-full max-w-[482px] h-auto'
                        />
                    </a>
                ))
            }
        </div>
        <div class='flex flex-col gap-y-4 mt-10 w-full max-w-max'>
            {
                twoColumnProjects.map((item) => (
                    <a class='cursor-pointer max-w-max' href={item?.url}>
                        <img
                            src={item.img}
